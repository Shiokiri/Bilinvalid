generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Media {
  id BigInt @id

  type      Int
  title     String
  cover     String
  intro     String
  page      Int
  duration  Int
  upperMid  BigInt
  upperName String
  upperFace String
  attr      Int
  collect   Int
  play      Int
  danmaku   Int
  link      String
  ctime     DateTime
  pubtime   DateTime
  bvid      String

  favorites MediasInFavorites[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Favorite {
  id BigInt @id

  fid            BigInt
  mid            BigInt
  attr           Int
  title          String
  cover          String
  upperMid       BigInt
  upperName      String
  upperFace      String
  upperFollowed  Boolean
  upperVipType   Int
  upperVipStatue Int
  coverType      Int
  collect        Int
  play           Int
  thumbUp        Int
  share          Int
  type           Int
  intro          String
  ctime          DateTime
  mtime          DateTime
  state          Int
  favState       Int
  likeState      Int
  mediaCount     Int
  index          Int // 收藏夹排序

  medias MediasInFavorites[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediasInFavorites {
  media    Media    @relation(fields: [mid], references: [id])
  mid      BigInt
  favorite Favorite @relation(fields: [fid], references: [id])
  fid      BigInt

  favtime DateTime // 收藏时间

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([mid, fid])
}
